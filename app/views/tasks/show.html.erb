<% provide(:title, current_user.name) %>

<div class="row">
  <h1>タスク詳細</h1>
  <div class="col-md-10 col-md-offset3">
    <table class="table table-bordered table-condensed" id="table-detail">
      <tr>
        <th class="col-md-3"><%= Task.human_attribute_name :id %></th>
          <td class="col-md-9"><%= @task.id %></td>
      </tr>
      <tr>
        <th class="col-md-3"><%= Task.human_attribute_name :title %></th>
          <td class="col-md-9"><%= @task.title %></td>
      </tr>
      <tr>
        <th class="col-md-3"><%= Task.human_attribute_name :detail %></th>
          <td class="col-md-9"><%= simple_format @task.detail %></td>
      </tr>
      <tr>
        <th class="col-md-3"><%= Task.human_attribute_name :created_at %></th>
          <td class="col-md-9"><%= l(@task.created_at, format: :long) %></td>
      </tr>
       <tr>
        <th class="col-md-3"><%= Task.human_attribute_name :updated_at %></th>
          <td class="col-md-9"><%= l(@task.updated_at, format: :long) %></td>
      </tr>
    </table>
    <tr>
      <td>
        <%= link_to "編集", edit_user_task_path(@user.id, @task.id), class: "btn btn-lg btn-success" %>
        <%= link_to "削除", user_task_path(@user.id, @task.id), method: :delete, 
            data: { confirm: "削除してよろしいですか？" }, class: "btn  btn-lg btn-danger" %>
      </td>
    </tr>
  </div>
</div>