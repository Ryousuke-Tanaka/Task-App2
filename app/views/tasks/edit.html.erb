<% provide(:title, 'Edit Task')%>
<% provide(:class_text, 'edittask') %>
<% provide(:button_update, '更新') %>
<% provide(:button_cancel, 'キャンセル') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user, @task), method: :patch, local: true) do |f| %>
      
      <%= f.label :title, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :title, class: "form-control" %>
      
      <%= f.label :detail, class: "label-#{yield(:class_text)}" %>
      <%= f.text_area :detail, class: "form-control", size: "40x5" %>
      
      <div class="button">
      <%= f.submit yield(:button_update), class: "btn btn-primary btn-#{yield(:button_update)}" %>
      <%= link_to "#{yield(:button_cancel)}", user_tasks_path(@user, @task), class: "btn btn-default w-20" %>
      </div>
    <% end %>
  </div>
</div>