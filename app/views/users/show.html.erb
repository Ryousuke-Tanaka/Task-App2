<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <h1>プロフィール</h1>
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-bordered table-condensed user-table">
        <tbody>
          <tr>
            <th class="col-md-3"><%= User.human_attribute_name :id %></th>
              <td class="col-md-9"><%= @user.id %></td>
            </tr>
            <tr>
              <th class="col-md-3"><%= User.human_attribute_name :name %></th>
                <td class="col-md-9"><%= @user.name %></td>
            </tr>
            <tr>
              <th class="col-md-3"><%= User.human_attribute_name :email %></th>
                <td class="col-md-9"><%= @user.email %></td>
            </tr>
            <tr>
              <th class="col-md-3"><%= User.human_attribute_name :created_at %></th>
                <td class="col-md-9"><%= l(@user.created_at, format: :long) %></td>
            </tr>
          </tbody>
      </table>
    </div>    
  </div>
</div>